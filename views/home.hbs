<div class="col-8 pb-2">
    <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            Insert Collection
        </button>
        <div class="container-fluid">
            <ul class=" dropdown-nav__container dropdown-menu">
                <form class="px-4 py-3" action="/" method="POST">
                    <li class="menu-item">
                        <input type="text" class="form-control form-control-lg" placeholder="new collection name"
                            name="input-colname">
                    </li>
                    <li class="menu-item">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </li>
                </form>
            </ul>
        </div>
    </div>
    <br>
    <div>
        <select>
            {{#each data}}
            <option value="{{@key}}" {{{isSelected ./setCollectionId @key}}}>
                {{this.collection_id}}
            </option>
            {{/each}}
        </select>
        <select>
            {{#each data}}
            <option value="{{@key}}" {{{isSelected ./setCollectionName @key}}}>
                {{this.name}}
            </option>
            {{/each}}
        </select>
        Use Selectpicker from Bootstrap-select to make a search dropdown box
        <select class="selectpicker" data-live-search="true">
            <option data-tokens="ketchup mustard">Hot Dog, Fries and a Soda</option>
            <option data-tokens="mustard">Burger, Shake and a Smile</option>
            <option data-tokens="frosting">Sugar, Spice and all things nice</option>
        </select>

    </div>
</div>
<table class="table table-dark table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col" class="text-center">id</th>
            <th scope="col" class="text-center">name</th>
            <th scope="col" class="text-center">options</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row" class="text-center"></th>
            <form class="px-4 py-3" action="/" method="POST">
                <td class="text-center">
                    <input type="text" class="form-control form-control-lg form-control-block"
                        placeholder="collection name" name="input-colName">
                </td>
                <td class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg btn-block"><i class="bi bi-plus-lg"></i> Insert
                        Collection</button>
                </td>
            </form>
        </tr>
        {{#each data}}
        <tr>
            <th scope="row" class="text-center">{{this.collection_id}}</th>
            <td class="text-center">{{this.name}}</td>
            <td class="text-center">
                <a href="#" type="button" class="btn btn-warning btn-small"> <i class="bi bi-pencil-square"></i>
                    Edit</a>
                <a href="#" type="button" class="btn btn-danger btn-small"> <i class="bi bi-trash3-fill"></i> Delete</a>
                <a href="#" type="button" class="btn btn-info btn-small"> <i class="bi bi-eyeglasses"></i> View</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>