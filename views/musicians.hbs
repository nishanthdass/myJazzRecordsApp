<table class="table table-dark table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col" class="text-center">musician_id</th>
            <th scope="col" class="text-center">first_name</th>
            <th scope="col" class="text-center">last_name</th>
            <th scope="col" class="text-center">instrument</th>
            <th scope="col" class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row" class="text-center"></th>
            <form class="px-4 py-3" action="/musicians" method="POST">
                <td class="text-center">
                    <input type="text" class="form-control form-control-lg form-control-block" placeholder="first name"
                        name="input-musFn">
                </td>
                <td class="text-center">
                    <input type="text" class="form-control form-control-lg form-control-block" placeholder="last name"
                        name="input-musLn">
                </td>
                <td class="text-center">
                    <input type="text" class="form-control form-control-lg form-control-block" placeholder="instrument"
                        name="input-musInst">
                </td>
                <td class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg btn-block"><i class="bi bi-plus-lg"></i> Insert
                        Musician</button>
                </td>
            </form>
        </tr>
        {{#each data}}
        <tr>
            <th scope="row" class="text-center">{{this.musician_id}}</th>
            <td class="text-center">{{this.first_name}}</td>
            <td class="text-center">{{this.last_name}}</td>
            <td class="text-center">{{this.instrument}}</td>
            <td class="text-center">
                <a type="button" class="open-editMusc btn btn-warning btn-small" data-toggle="modal"
                    data-id='{"id":{{this.musician_id}},"first_name":"{{this.first_name}}", "last_name":"{{this.last_name}}","instrument":"{{this.instrument}}"}'
                    title="Edit this item" href="#renderEdit"><i class="bi bi-pencil-square"></i> Edit</a>
                <a href="#" type="button" class="btn btn-danger btn-small"> <i class="bi bi-trash3-fill"></i> Delete</a>
                <a href="#" type="button" class="btn btn-info btn-small"> <i class="bi bi-eyeglasses"></i> View</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>



<!-- Edit Modal -->
<div class="modal fade" id="renderEdit" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Musicians</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="px-4 py-3" action="/musicians/editmusc" method="GET">
                <div class="modal-body">
                    id
                    <input type="text" class="form-control form-control-lg" name="musceditId" id="musceditId" value=""
                        style="background: #D3D3D3;" readonly />
                </div>
                <div class="modal-body">
                    first name
                    <input type="text" class="form-control form-control-lg" name="musceditFn" id="musceditFn"
                        value="" />
                </div>
                <div class="modal-body">
                    last name
                    <input type="text" class="form-control form-control-lg" name="musceditLn" id="musceditLn"
                        value="" />
                </div>
                <div class="modal-body">
                    instrument
                    <input type="text" class="form-control form-control-lg" name="musceditInst" id="musceditInst"
                        value="" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
            <div>
            </div>
        </div>
    </div>
</div>