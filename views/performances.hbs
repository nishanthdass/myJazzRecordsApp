<table class="table table-dark table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col" class="text-center">performance_id</th>
            <th scope="col" class="text-center">musician_id</th>
            <th scope="col" class="text-center">Musicians('name')</th>
            <th scope="col" class="text-center">album_id</th>
            <th scope="col" class="text-center">Albums('name')</th>
            <th scope="col" class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row" class="text-center"></th>

            <form class="px-4 py-3" action="/performances" method="POST">
                <td class="text-center">
                    <input type="text" class="form-control form-control-sm form-control-block" placeholder="first name"
                        name="input-perfMusFn">
                    <input type="text" class="form-control form-control-sm form-control-block" placeholder="last name"
                        name="input-perfMusLn">
                    -- To do - use jQuery bootstrap multiselect dropdown
                </td>
                <td></td>
                <td class="text-center">
                    <input type="text" class="form-control form-control-lg form-control-block" placeholder="album name"
                        name="input-perfAlbName">
                </td>
                <td></td>
                <td class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg btn-block"><i class="bi bi-plus-lg"></i> Insert
                        Performance</button>
                </td>
            </form>
        </tr>
        {{#each data}}
        <tr>
            <th scope="row" class="text-center">{{this.performance_id}}</th>
            <td class="text-center">{{this.musicians_musician_id}}</td>
            <td class="text-center">{{this.first_name}} {{this.last_name}}</td>
            <td class="text-center">{{this.albums_album_id}}</td>
            <td class="text-center">{{this.name}}</td>
            <td class="text-center">
                <a type="button" class="open-editPerf btn btn-warning btn-small" data-toggle="modal"
                    data-id='{"id":{{this.performance_id}}, "musicians_musician_id":{{this.musicians_musician_id}}, "first_name":"{{this.first_name}}", "last_name":"{{this.last_name}}","albums_album_id":"{{this.albums_album_id}}", "name":"{{this.name}}"}'
                    title="Edit this item" href="#renderEdit"><i class="bi bi-pencil-square"></i> Edit</a>
                <a href="#" type="button" class="btn btn-danger btn-small"> <i class="bi bi-trash3-fill"></i> Delete</a>
                <a href="#" type="button" class="btn btn-info btn-small"> <i class="bi bi-eyeglasses"></i> View</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>




<!-- Edit Modal -->
<div class="modal fade" id="renderEdit" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Performance</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="px-4 py-3" action="/performances/editperf" method="GET">
                <div class="modal-body">
                    id
                    <input type="text" class="form-control form-control-lg" name="perfeditId" id="perfeditId" value=""
                        style="background: #D3D3D3;" readonly />
                </div>
                <div class="modal-body">
                    musicians id
                    <input type="text" class="form-control form-control-lg" name="perfmusceditId" id="perfmusceditId"
                        value="" style="background: #D3D3D3;" readonly />
                </div>
                <div class="modal-body">
                    first name
                    <input type="text" class="form-control form-control-lg" name="perfmusceditFn" id="perfmusceditFn"
                        value="" />
                </div>
                <div class="modal-body">
                    last name
                    <input type="text" class="form-control form-control-lg" name="perfmusceditLn" id="perfmusceditLn"
                        value="" />
                </div>
                <div class="modal-body">
                    album id
                    <input type="text" class="form-control form-control-lg" name="perfalbid" id="perfalbid" value=""
                        style="background: #D3D3D3;" readonly />
                </div>
                <div class="modal-body">
                    album name
                    <input type="text" class="form-control form-control-lg" name="perfalbname" id="perfalbname"
                        value="" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
            <div>
            </div>
        </div>
    </div>
</div>